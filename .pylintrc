[MAIN]
# Analyse import fallback blocks
analyse-fallback-blocks=no

# Ignore test files for import errors (pytest not installed in CI)
ignore-patterns=test_.*\.py

[MESSAGES CONTROL]
# Disable the following checks:
# C0103: Invalid name (constant naming, etc.)
# C0114: Missing module docstring
# C0115: Missing class docstring
# C0116: Missing function or method docstring
# C0207: Use maxsplit arg
# C0209: Consider using f-string
# C0301: Line too long
# C0303: Trailing whitespace
# C0305: Trailing newlines
# C0411: Wrong import order
# E0401: Unable to import (pytest etc.)
# E0611: No name in module (false positives in tests)
# E1120: No value for argument (known issue)
# E1136: Unsubscriptable object (false positives)
# R0801: Duplicate code
# R0903: Too few public methods
# R0911: Too many return statements
# R0912: Too many branches
# R0913: Too many arguments
# R0914: Too many local variables
# R0915: Too many statements
# R1705: Unnecessary else after return
# R1735: Use dict literal
# W0311: Bad indentation
# W0611: Unused import
# W0612: Unused variable
# W0613: Unused argument
# W0621: Redefining name from outer scope
# W1202: Logging format interpolation
# W1203: Logging fstring interpolation
# W1309: F-string without interpolation
# W0718: Catching too general exception
disable=C0103,
        C0114,
        C0115,
        C0116,
        C0207,
        C0209,
        C0301,
        C0303,
        C0305,
        C0411,
        E0401,
        E0611,
        E1120,
        E1136,
        R0801,
        R0903,
        R0911,
        R0912,
        R0913,
        R0914,
        R0915,
        R1705,
        R1735,
        W0311,
        W0611,
        W0612,
        W0613,
        W0621,
        W0718,
        W1202,
        W1203,
        W1309

[FORMAT]
# Maximum number of characters on a single line
max-line-length=120

[DESIGN]
# Maximum number of arguments for function / method
max-args=10

# Maximum number of locals for function / method body
max-locals=20

# Maximum number of return / yield for function / method body
max-returns=10

# Maximum number of branch for function / method body
max-branches=15

# Maximum number of statements in function / method body
max-statements=60
